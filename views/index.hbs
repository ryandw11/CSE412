<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Game System</title>

    {{> common_css}}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
</head>

<body>
    {{> head}}

    <h2 class="text-center text-primary">Discover Games</h2>

    <main class="container mb-5">
        <section class="row row-cols-1 row-cols-md-3">
            {{#each games}}
            <div class="col">
                <section class="card mt-2">
                    <a href="/game/{{gameid}}"><img src="{{gamepicture}}" alt="" class="game-pic"></a>
                    <div class="card-body">
                        <h5 class="card-title text-center"><a href="/game/{{gameid}}">{{title}}</a></h5>
                    </div>
                    <div class="card-footer">
                        <div class="d-flex justify-content-around">
                            <div><img src="{{userid}}" alt="" class="user-image-replace profile-pic-small" />
                                <a href="/profile/{{userid}}" class="user-name-replace">{{userid}}</a>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
            {{/each}}
        </section>
    </main>

    {{!-- The page navigation --}}
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            {{#if pageData.hasPrev}}
            <li class="page-item">
                <a class="page-link" href="?pge={{pageData.previousPage}}" tabindex="-1">Previous</a>
            </li>
            {{else}}
            <li class="page-item disabled">
                <a class="page-link" href="" tabindex="-1">Previous</a>
            </li>
            {{/if}}
            {{#each pageData.pages}}
            <li class="page-item {{#ifEq this ../pageData.pageNumber}}active{{/ifEq}}"><a class="page-link"
                    href="?pge={{this}}">{{this}}</a></li>
            {{/each}}
            {{#if pageData.hasNext}}
            <li class="page-item">
                <a class="page-link" href="?pge={{pageData.nextPage}}">Next</a>
            </li>
            {{else}}
            <li class="page-item disabled">
                <a class="page-link" href="">Next</a>
            </li>
            {{/if}}
        </ul>
    </nav>

    {{> scripts}}

</body>