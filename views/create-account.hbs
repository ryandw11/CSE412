<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Create Account | CSE412 Form System</title>

    {{> common_css}}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
</head>

<body>
    {{> head}}
    <style>
        form {
            width: 50%;
            margin: auto;
        }

        #loginSubmit,
        #signupSubmit {
            display: block;
            width: 150px;
            margin: auto;
            margin-top: 30px;
        }

        h1 {
            text-align: center;
        }

        #create {
            text-align: center;
        }
    </style>
    <!-- The main content -->
    <main>
        {{!-- Create Account --}}
        <h1>Create Account</h1>
        <div id="signup-error" style="display: none;" class="alert alert-danger container w-20" role="alert">
            <i data-feather="alert-circle"></i>
            <span>An error has occured!</span>
        </div>
        <form id="signup" action="/auth/create-account" method="post" class="container needs-validation" novalidate>
            <label for="username" class="txt-color">Username:</label>
            <input name="username" id="username" type="text" class="form-control" required />
            <div class="invalid-feedback">
                Please enter in a username.
            </div>
            <label for="password" class="txt-color">Password:</label>
            <input name="password" type="password" class="form-control" required />
            <div class="invalid-feedback">
                Please enter in a password with at least an uppercase and 8 characters long.
            </div>
            <label for="password" class="txt-color">Confirm Password:</label>
            <input name="confirm_password" type="password" class="form-control" required />
            <div class="invalid-feedback">
                Please confirm your password.
            </div>
            <input type="submit" value="Create Account" id="signupSubmit" class="btn btn-success" />
        </form>

        <p id="create"><a href="/login">Or login to an existing account!</a></p>
    </main>

    <script src="/javascript/bootstrap_form.js"></script>
    <script src="/javascript/create-account.js"></script>

    <script>
        function onLoginSubmit(token) {
            document.getElementById("login").submit();
        }
    </script>
    <script src="/feather.min.js"></script>
    <script>
        feather.replace({ width: '24', height: '24', 'stroke-width': '1' });
    </script>

    {{> scripts}}
</body>